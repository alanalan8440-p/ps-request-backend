generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  OFFICER
}

enum RequestType {
  OD
  LEAVE
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model Student {
  id           Int     @id @default(autoincrement())
  registration String  @unique
  password     String
  firstLogin   Boolean @default(true)
  name         String?
  department   String?
  year         String?
  section      String?

  requests     Request[]
}

model Staff {
  id        Int       @id @default(autoincrement())
  staffId   String    @unique
  name      String
  password  String
  role      UserRole
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([staffId])
}

model Request {
  id          Int      @id @default(autoincrement())
  type        String
  justification String
  fromDate    DateTime
  toDate      DateTime
  status      String   @default("PENDING")

  isDeleted   Boolean  @default(false)

  processedBy Int?
  processedAt DateTime?

  studentId   Int
  student     Student  @relation(fields: [studentId], references: [id])

  createdAt   DateTime @default(now())
}

